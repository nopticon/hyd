$icon-font       = 'FontAwesome'

$blue-base       = #1ca3dc
$blue-dark		 = #005984
$blue-light		 = #d6eff6
$orange-base 	 = #e36f1e
$yellow-base	 = #fcd97e
$border-gray 	 = #d1d0ce
