$gray-light 	 = #f3f3f3
$color-text 	 = #616161
$widget-text 	 = #373737
$footer-text 	 = #54565b
$gray-base 		 = #a8a8aa
$body-bg 		 = #f5f5f5
$disclaimer-text = #76777b

$large-font 	= 24px
$normal-font 	= 16px
