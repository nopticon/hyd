// Non-Mobile First Method
$os                 = 'only screen and '
$lg                 = $os + '(max-width 1200px)'
$md                 = $os + '(max-width 992px)'
$sm                 = $os + '(max-width 768px)'
$xs                 = $os + '(min-width: 320px) and (max-width 767px)'
$iphone-4-portrait  = $os + '(max-width: 320px)'
$iphone-4-landscape = $os + '(max-width: 600px) and (orientation landscape)'
$phablet            = $os + '(max-width 600px)'
$top-scroll         = $os + '(min-width 767px)'
$ipad-landscape     = $os + '(min-width 768px) and (max-width 1024px) and (orientation landscape)'
$ipad-portrait      = $os + '(min-width 768px) and (max-width 1024px) and (orientation portrait) and (-webkit-min-device-pixel-ratio 1)'
$nexus-10           = $os + '(min-width 800px) and (max-width 1280px) and (orientation portrait)'
$nexus-10-landscape = $os + '(min-width 800px) and (max-width 1280px) and (orientation landscape)'
$iphone-landscape   = $os + '(max-width 768px) and (orientation landscape)'
$iphone-portrait    = $os + '(max-width 768px) and (orientation portrait)'
